{
    "extends": "stylelint",
    "plugins": [
        "stylelint-plugin-stylus"
      ],
        "overrides": [
        {
          "files": ["*.stylus", "*.styl", "**/*.stylus", "**/*.styl"],
          "customSyntax": "postcss-styl"
        }
    ],

    "rules": {
        "stylus/declaration-colon": "never"
    },
    
    "ignoreFiles": [
      "build/*"
    ]
  }